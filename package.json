{
  "name": "@vlsergey/js-config",
  "version": "1.0.0",
  "description": "Common configuration files for JavaScript projects",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib/*",
    "build": "cross-env NODE_ENV=production tsc -p ./src",
    "build:watch": "cross-env NODE_ENV=development tsc -w -p ./src",
    "eslint:check": "eslint --ignore-pattern \"!.eslintrc.js\" ./*.js src/**/*.js test/**/*.tsx",
    "eslint:fix": "eslint --ignore-pattern \"!.eslintrc.js\" --fix ./*.js src/**/*.js test/**/*.tsx",
    "test": "cross-env NODE_ENV=development karma start karma.conf.js --single-run",
    "test:watch": "cross-env NODE_ENV=development karma start karma.conf.js --no-single-run",
    "test:watch:chrome": "cross-env NODE_ENV=development karma start karma.conf.js --no-single-run --browsers Chrome",
    "preversion": "npm run eslint:fix && npm run test && npm run clean && npm run build",
    "version": "npm publish --access=public",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vlsergey/js-config.git"
  },
  "keywords": [
    "chia",
    "configuration",
    "defaults",
    "eslint",
    "jsdom",
    "karma",
    "mocha",
    "tsc",
    "typescript",
    "rules",
    "vlsergey",
    "webpack"
  ],
  "author": "Sergey Vladimirov <vlsergey@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vlsergey/js-config/issues"
  },
  "homepage": "https://github.com/vlsergey/js-config#readme",
  "dependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-watch": "^7.0.0",
    "jsdom": "^16.4.0",
    "karma": "^6.3.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jsdom-launcher": "^9.0.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^8.2.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.36"
  }
}
