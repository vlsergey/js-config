{
  "name": "@vlsergey/js-config",
  "version": "10.2.0",
  "description": "Common configuration files for JavaScript projects",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib/*",
    "build": "cross-env NODE_ENV=production tsc -p ./src",
    "build:watch": "cross-env NODE_ENV=development tsc -w -p ./src",
    "check": "npm run eslint:fix && npm run build && npm run test",
    "eslint:check": "eslint --ignore-pattern \"!.eslintrc.js\" ./*.js src/**/*.js test/**/*.js test/**/*.ts*",
    "eslint:fix": "eslint --ignore-pattern \"!.eslintrc.js\" --fix ./*.js src/**/*.js test/**/*.js test/**/*.ts*",
    "test": "cross-env NODE_ENV=development karma start karma.conf.js --single-run --log-level debug",
    "test:watch": "cross-env NODE_ENV=development karma start karma.conf.js --no-single-run",
    "test:watch:chrome": "cross-env NODE_ENV=development karma start karma.conf.js --no-single-run --browsers Chrome",
    "preversion": "npm run eslint:fix && npm run test && npm run clean && npm run build",
    "version": "npm publish --access=public",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vlsergey/js-config.git"
  },
  "keywords": [
    "chia",
    "configuration",
    "defaults",
    "eslint",
    "jsdom",
    "karma",
    "mocha",
    "tsc",
    "typescript",
    "rules",
    "vlsergey",
    "webpack"
  ],
  "author": "Sergey Vladimirov <vlsergey@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vlsergey/js-config/issues"
  },
  "homepage": "https://github.com/vlsergey/js-config#readme",
  "dependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-watch": "^8.0.0",
    "jsdom": "^19.0.0",
    "karma": "^6.3.17",
    "karma-chrome-launcher": "^3.1.1",
    "karma-jsdom-launcher": "^12.0.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^9.2.2",
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.8",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }
}
